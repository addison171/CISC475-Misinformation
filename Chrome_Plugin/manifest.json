{
  "manifest_version": 3,

  "name": "Chrome Plugin",
  "description": "This extension displays a simple visualization of browsing history",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "action": {
    "default_icon": "icon32.png",
    "default_popup": "popup.html"
  },
  
  "background": {
    "service_worker": "worker_wrapper.js"
  },

  "content_scripts":[{
    "matches": ["http://*/*", "https://*/*"],
    "js":["ribbon.js"]
}],

  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "history",
    "alarms"
  ],

  "options_page":
  "options.html"
}


